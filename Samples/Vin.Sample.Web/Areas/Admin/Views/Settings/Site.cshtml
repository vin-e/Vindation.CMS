@model Vin.Sample.Web.Areas.Admin.Models.SiteSettingsViewModel
@{
    ViewBag.Title = "Site";
}

@section head {
    <link type="text/css" rel="stylesheet" href="~/Content/admin/iCheck/all.css" />
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="well">
            <div class="header">
                Site Settings
            </div>
            <form id="settingSave" method="post" class="form-horizontal" role="form">
                @Html.HiddenFor(x => x.TenantSettings.DefaultTheme, new { @class = "data" })
                
                <div class="checkbox icheck form-group">
                    <label class="icheck">@Html.CheckBoxFor(x => x.TenantSettings.IsEnabled) @Html.DisplayNameFor(x => x.TenantSettings.IsEnabled)</label>
                </div>
                <hr />
                <div class="checkbox icheck form-group">
                    <label class="icheck">@Html.CheckBoxFor(x => x.SiteSettings.EnableNewsletter) @Html.DisplayNameFor(x => x.SiteSettings.EnableNewsletter)</label>
                </div>

                <div class="checkbox icheck form-group">
                    <label class="icheck">@Html.CheckBoxFor(x => x.SiteSettings.EnableTwitterFeed) @Html.DisplayNameFor(x => x.SiteSettings.EnableTwitterFeed)</label>
                </div>

                <div class="checkbox icheck form-group">
                    <label class="icheck">@Html.CheckBoxFor(x => x.SiteSettings.EnableGoogleAnalytics) @Html.DisplayNameFor(x => x.SiteSettings.EnableGoogleAnalytics)</label>
                </div>

                <div class="form-group">
                        @Html.LabelFor(x => x.SiteSettings.GoogleAnaltyicsId)
                        @Html.TextBoxFor(x => x.SiteSettings.GoogleAnaltyicsId, new { @class = "form-control" })
                </div>

                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <button class="btn btn-default btn-block" type="reset"><i class="fa fa-times"></i> Cancel</button>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-check"></i> Save</button>
                </div>
            </form>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/admin/jquery.icheck.min.js" type="text/javascript"></script>
    <script>
        settingsInit();

        $('.checkbox').find('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%'
        });
    </script>
}